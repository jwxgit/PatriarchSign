<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityBg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/w40"
            android:layout_height="@dimen/w40"
            android:layout_marginLeft="@dimen/w30"
            android:background="@drawable/menu_item_selector"
            android:onClick="back"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/back"
            android:tint="@color/colorTheme" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w20"
            android:text="确认签核信息"
            android:textSize="@dimen/sp20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:paddingLeft="36dp"
        android:paddingRight="36dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:text="姓名："
            android:textColor="@color/colorGrayDark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:text="张三"
            android:textColor="@color/colorGrayDark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:text="性别："
            android:textColor="@color/colorGrayDark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:text="男"
            android:textColor="@color/colorGrayDark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:text="出生日期："
            android:textColor="@color/colorGrayDark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/birthDay"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:text="2015年08月07日(2岁11月3天)"
            android:textColor="@color/colorGrayDark"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="209dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        android:paddingLeft="36dp"
        android:paddingRight="36dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="今日接种疫苗："
            android:textColor="@color/colorGrayDark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:stretchColumns="1">

            <TableRow android:background="@color/colorWhite">

                <Button
                    android:layout_width="186dp"
                    android:layout_height="30dp"
                    android:background="@drawable/full_line_gray_bg"
                    android:text="疫苗名称"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="267dp"
                    android:layout_height="30dp"
                    android:background="@drawable/full_line_gray_bg"
                    android:text="生产企业"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="148dp"
                    android:layout_height="30dp"
                    android:background="@drawable/full_line_gray_bg"
                    android:text="批号"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="164dp"
                    android:layout_height="30dp"
                    android:background="@drawable/full_line_gray_bg"
                    android:text="有效期"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="126dp"
                    android:layout_height="30dp"
                    android:background="@drawable/full_line_gray_bg"
                    android:text="登记医生"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/TableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow android:background="@color/colorWhite">

                <Button
                    android:layout_width="186dp"
                    android:layout_height="30dp"
                    android:background="@drawable/full_line"
                    android:text="卡介苗"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="267dp"
                    android:layout_height="30dp"
                    android:background="@drawable/full_line"
                    android:text="北京科兴药业"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="148dp"
                    android:layout_height="30dp"
                    android:background="@drawable/full_line"
                    android:text="0002"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="164dp"
                    android:layout_height="30dp"
                    android:background="@drawable/full_line"
                    android:text="2020年05月05日"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="126dp"
                    android:layout_height="30dp"
                    android:background="@drawable/full_line"
                    android:text="杨某某"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </TableRow>


        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="温馨提示：请认真核对儿童信息和接种疫苗信息。"
            android:textColor="@color/colorPinkDark"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp"
        android:orientation="vertical"
        android:paddingLeft="36dp"
        android:paddingRight="36dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="签核信息："
            android:textColor="@color/colorGrayDark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/signature"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/full_line"
                android:padding="@dimen/w10"
                app:srcCompat="@mipmap/sign_loading_holder" />

            <ImageView
                android:id="@+id/photograph"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/full_line"
                android:padding="15dp"
                app:srcCompat="@drawable/doctor_img_holder" />

            <ImageView
                android:id="@+id/fingerprint"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/full_line"
                android:padding="@dimen/w10"
                app:srcCompat="@mipmap/finger" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>